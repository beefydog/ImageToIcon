<Application x:Class="ImageToIcon.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>

            <!-- Accent & theme color overrides -->
            <SolidColorBrush x:Key="AccentBaseColorBrush"
                             Color="#FF4080C0" />
            <!-- primary accent -->
            <SolidColorBrush x:Key="AccentSecondaryColorBrush"
                             Color="#FF5BA4E6" />
            <SolidColorBrush x:Key="ApplicationBackgroundBrush"
                             Color="#FF1C1F2B" />
            <SolidColorBrush x:Key="ControlBackgroundBrush"
                             Color="#FF2A2D3E" />
            <SolidColorBrush x:Key="ControlForegroundBrush"
                             Color="#FFF0F0F0" />
            <SolidColorBrush x:Key="TextFillColorPrimaryBrush"
                             Color="#FFF8F8F8" />
            <SolidColorBrush x:Key="TextFillColorSecondaryBrush"
                             Color="#FFB0B0B0" />

            <!-- Optional button polish -->
            <Style TargetType="{x:Type ui:Button}"
                   BasedOn="{StaticResource {x:Type ui:Button}}">
                <Setter Property="CornerRadius"
                        Value="6" />
                <Setter Property="Padding"
                        Value="8,4" />
                <Setter Property="FontWeight"
                        Value="SemiBold" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>

